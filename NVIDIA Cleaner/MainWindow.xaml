<Window x:Class="NVIDIA_Cleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NVIDIA_Cleaner"
        mc:Ignorable="d"
        Title="NVIDIA cache cleaner" Height="450" Width="800">
    <Grid>
        <TextBox Name="LogLabel" IsReadOnly="True" MaxHeight="250" HorizontalAlignment="Center" VerticalAlignment="Top" MinWidth="500" MinHeight="250" Margin="0,50,0,0"/>
        <Button Name="CleanButton" Foreground="White" Content="Clean NVIDIA cache" Background="Green" Width="120" Height="40" VerticalAlignment="Bottom" Margin="0,0,0,50"/>
    </Grid>
</Window>
